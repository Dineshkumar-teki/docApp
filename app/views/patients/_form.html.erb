<%= form_with(model: patient) do |form| %>
  <% if patient.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control mt-2 mb-3" %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control mt-2 mb-3" %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.number_field :phone_number, class: "form-control mt-2 mb-3" %>
  </div>

  <div>
    <%= form.label :slot, style: "display: block" %>
    <%= form.datetime_field :slot, class: "form-control mt-2 mb-3" %>
  </div>

  <div>
    <%= form.label :cause, style: "display: block" %>
    <%= form.text_area :cause, class: "form-control mt-2 mb-3" %>
  </div>

  <div class="d-flex gap-3">
    <%= form.submit class:"btn btn-success"%>
    <%= link_to "Back to patients", patients_path, class: "btn btn-primary" %>
  </div>
<% end %>
