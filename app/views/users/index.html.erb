
<% content_for :title, "Users" %>

<h1>Users List</h1>

<div id="users">
  <table class="table table-hover table-striped table-bordered" >
    <thead class="thead-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <%= render user %>
      <% end %>
    </tbody>
  </table>
  
    

  
</div>

<%= link_to "New user", new_user_path, class:"btn btn-secondary" %>
